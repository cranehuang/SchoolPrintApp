<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sub_child_item_selector" >
    
    <Button 
        android:id="@+id/yes_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/yes_btn_selector"
        android:clickable="true"
        android:focusable="false"/>
    
    <ProgressBar
		    android:id="@+id/progress"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="15dp"
		    style="@android:style/Widget.ProgressBar.Inverse"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:layout_centerVertical="true"
			android:visibility="gone"/>
    
    <LinearLayout 
        android:id="@+id/layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/yes_btn"
        android:layout_marginRight="60dp"
        android:layout_centerVertical="true"
        android:weightSum="4.0"
        >
        <TextView 
            android:id="@+id/room_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.0"
            style="@style/child_text_style"/>
        <TextView 
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.0"
            style="@style/child_text_style"/>
        <TextView 
            android:id="@+id/order_sum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.0"
            style="@style/child_text_style"/>
        <TextView 
            android:id="@+id/money_sum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.0"
            style="@style/child_text_style"/>
    </LinearLayout>

</RelativeLayout>
