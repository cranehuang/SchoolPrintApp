<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@drawable/group_item_bg_selector"
    android:paddingTop="2dp"
    android:paddingBottom="3dp">
    <ImageView 
	    android:id="@+id/indicator_1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="10dp"/>
    
    <Button 
        android:id="@+id/yes_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/yes_btn_selector"
        android:clickable="true"
        android:focusable="false"/>
    
    <ProgressBar
		    android:id="@+id/progress"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="15dp"
		    style="@android:style/Widget.ProgressBar.Inverse"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:layout_centerVertical="true"
			android:visibility="gone"/>
    
	<TextView 
	    android:id="@+id/buildingNum_tv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/indicator_1"
	    android:layout_centerVertical="true"
	    android:textSize="@dimen/text_size"
	    android:textColor="@color/color_black"/>
	
	<TextView
	    android:id="@+id/order_sum"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/buildingNum_tv"
	    android:layout_marginLeft="50dp"
	    android:layout_centerVertical="true"
	    android:textColor="@color/text_color_deep"/>
	<TextView 
	    android:id="@+id/money_sum"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_toRightOf="@id/order_sum"
	    android:layout_centerVertical="true"
	    android:textColor="@color/text_color_deep"/>
    

</RelativeLayout>
